%p
  %strong Name
  =h user.name
%p
  %strong Login
  =h user.login
%p
  %strong E-mail
  = mail_to user.email
%p
  %strong Phone number
  =h user.phone_no
%p
  %strong Address
  =h user.address
%p
  %strong Type
  =h user.type
%p
  %strong Description
  =h user.description
%p
  = link_to 'Edit', edit_admin_user_path(user)
  |
  = link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete
  |
  = link_to 'Back to Users', admin_users_path if list.nil?
