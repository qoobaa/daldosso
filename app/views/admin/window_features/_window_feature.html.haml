%p
  %strong Name
  = h window_feature.name
%p
  %strong Type
  = window_feature.type
%p
  %strong Description
  = h window_feature.description
%p
  %strong Next step type
  = window_feature.next_step_type
- unless window_feature.min_thickness.nil?
  %p
    %strong Minimum thickness
    = window_feature.min_thickness
- unless window_feature.max_thickness.nil?
  %p
    %strong Maximum thickness
    = window_feature.max_thickness
%p
  = link_to 'Edit', edit_admin_window_feature_path(window_feature)
  |
  = link_to 'Destroy', admin_window_feature_path(window_feature), :confirm => 'Are you sure?', :method => :delete
