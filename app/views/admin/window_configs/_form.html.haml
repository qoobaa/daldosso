%p
  %strong Name of this configuration:
  = f.text_field :name

- WindowFeature.types.each do |type|
  %strong
    = type
  = select_tag 'window_config[window_feature_ids][]', window_features_for_select(type, @window_config.window_features.find_by_type(type))
  %br
%hr

%p
  %strong Glass Type:
  = f.select :glass_type_id, select_options_for(GlassType), :include_blank => :true
%p
  %strong Glass Color:
  = f.select :glass_color_id, select_options_for(GlassColor), :include_blank => :true
%p
  %strong Handle Type:
  = f.select :handle_type_id, select_options_for(HandleType), :include_blank => :true
%p
  %strong Sash and Structure Type:
  = f.select :sash_structure_id, select_options_for(SashStructure), :include_blank => :true
%p
  %strong Height:
  = f.text_field :height
%p
  %strong Width:
  = f.text_field :width
%p
  %strong Cover joint int:
  = f.text_field :cover_joint_int
%p
  %strong Cover joint ext:
  = f.text_field :cover_joint_ext
%p
  %strong Medium Rail height:
  = f.text_field :height_medium_rail
%p
  %strong Window Cost:
  = f.text_field :cost
%p
  %strong Additional information:
  = f.text_field :finish_quality
%hr
%p
  %strong User
  = f.select :customer_id, select_options_for(Customer), :include_blank => :true
