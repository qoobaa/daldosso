%h3= "Order number #{@order.id} :" if @order
%h2 Window Configurations
- for wc in @winconfigs
  = render :partial => 'window_config', :locals => {:wc => wc}
  - unless @order || (@order && !@order.is_saved?)
    = link_to 'Edit',edit_window_config_path(wc)
    = link_to 'Destroy', wc, :confirm => 'Are you sure?', :method => :delete
  %hr
= link_to 'Back to Order',@order if @order
%br
= link_to 'New',new_window_config_path unless @order
