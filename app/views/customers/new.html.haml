%h1 Signing up

= error_messages_for :customer

- form_for :customer, :url => customers_path do |f|
  %p
    = f.label :name
    = f.text_field :name
  %p
    = f.label :address
    = f.text_area :address
  %p
    = f.label :phone_no
    = f.text_field :phone_no
  %p
    = f.label :login
    = f.text_field :login
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %p
    = f.label :address
    = f.text_field :address
  %p= submit_tag 'Sign up'
