%p
  %strong Name:
  = h window_config.name rescue "[No name]"

%h3 Basic Features:
- window_config.window_features.each do |f|
  %p
    %strong
      = f[:type]
    = f.name
    %br
%h3 Other Features:
%p
  %strong Glass Type:
  = h window_config.glass_type.name rescue "[No Glass type chosen]"
%p
  %strong Glass Color:
  = h window_config.glass_color.name rescue "[No Glass color chosen]"
%p
  %strong Handle Type:
  = h window_config.handle_type.name rescue "[No Handle type chosen]"
%p
  %strong Sash number:
  = h window_config.sash_structure.sashes_number rescue ""
%p
  %strong Structure:
  = h window_config.sash_structure.structure.name rescue "[No Structure chosen]"
%p
  %strong Height:
  = h window_config.height
%p
  %strong Width:
  = h window_config.width
%p
  %strong Cover joint ext:
  = h window_config.cover_joint_ext
%p
  %strong Cover joint int:
  = h window_config.cover_joint_int
%p
  %strong Medium rail:
  = h window_config.height_medium_rail
%p
  %strong Finish Quality:
  = h window_config.finish_quality
%p
  %strong Customer:
  = h window_config.customer.name rescue "[No Customer chosen]"
%br
%p
  = link_to_if !window_config.order.nil? , 'Back to Order', seller_order_path(window_config.order)
%br
