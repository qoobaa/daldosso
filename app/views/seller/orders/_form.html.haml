%br
%p
  %strong Items in this order:
  = @order.order_items.size
  \:
  %br
  - @order.order_items.each do |order_item|
    %p
      = "[#{order_item.item_type[0..2]}]" rescue "[Unknown]"
      = order_item_link(order_item, :show, view)
      = text_field_tag "order_item[quantity][#{order_item.id}]", order_item.quantity
      |
      = order_item_link(order_item, :edit, view)
      |
      = order_item_link(order_item, :delete, view)
%br
%p
  %strong Customer:
  = f.select :customer_id, select_options_for(Customer)
%p
  %strong Order status:
  = f.select :order_status_id, select_options_for(OrderStatus)
%p
  %strong Percentual discount:
  = f.text_field :percentual_discount
%p
  %strong Employee:
  = f.select :seller_id, select_options_for(Seller)
%br
