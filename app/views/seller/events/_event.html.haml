%p
  %strong Type
  = h event.event_type.name
%p
  %strong Description
  = h event.description
%p
  %strong Added by
  = h event.user.name
%p
  %strong Order
  = event.order.name
%p
  %strong Added on
  = event.added_date
%p
  %strong Due on
  = event.due_date

%p
  = event_link('Edit', 'edit', event, @order) if view == 'show'
  = event_link('Show', 'show', event, @order) if view == 'index'
